# Node environment
NODE_ENV=development
PORT=3001

# Encryption and security
ENC_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# PostgreSQL database configuration
PG_DATABASE=inbody_ai_support
PG_USERNAME=inbody_user
PG_PASSWORD=your_password_here
PG_HOST=localhost
PG_PORT=5432
DB_ALTER=false

# Frontend directory (optional - defaults to ../eckwms/public)
# FRONTEND_DIR=/absolute/path/to/eckwms/public

# Language and translation configuration
DEFAULT_LANGUAGE=en
TRANSLATION_DOMAIN=for a warehouse management system
OPENAI_API_KEY=your_openai_api_key

# Server Ports
LOCAL_SERVER_PORT=3001
GLOBAL_SERVER_PORT=8080

# Public URL for QR Code Generation
GLOBAL_SERVER_URL=http://localhost:8080

# Internal URL for Global Server to connect to Local Server
LOCAL_SERVER_INTERNAL_URL=http://localhost:3001

# Global Server Sync Configuration
GLOBAL_SERVER_API_ENDPOINT=http://localhost:8080/api/internal/sync
GLOBAL_SERVER_API_KEY=a_super_secret_key_for_internal_sync

# Server Asymmetric Keys (generate with separate tool)
SERVER_PUBLIC_KEY=your_public_key_here
SERVER_PRIVATE_KEY=your_private_key_here

# Unique Instance ID
INSTANCE_ID=your_unique_instance_id

# Global Server Registration Endpoint
GLOBAL_SERVER_REGISTER_URL=http://localhost:8080/ECK/api/internal/register-instance
