# eckWMS Configuration (Standalone/Local/Relay Template)
NODE_ENV=development

# Encryption and security - CHANGE THESE IN PRODUCTION
# ENC_KEY must be 48 hex characters for AES-192 (used for internal storage)
ENC_KEY=dev_encryption_key_change_in_production_d34dac7ad4264dd8
# JWT_SECRET used for user authentication tokens
JWT_SECRET=dev_jwt_secret_68695b04ccf8da689a0c1fd000a05941e958bcf5d1091285400a7db43bb5402a

# PostgreSQL database (Local or External)
# Leave PG_PASSWORD empty to use Embedded PostgreSQL (auto-managed)
PG_HOST=localhost
PG_PORT=5432
PG_USERNAME=openpg
PG_PASSWORD=openpgpwd
PG_DATABASE=eckwms
DB_ALTER=true

# Server Configuration
PORT=3210
HTTP_PATH_PREFIX=/E

# Mesh Network Configuration
# NODE_ROLE: master (central server), peer (trusted local node), edge (pda/client), blind_relay (encrypted proxy)
NODE_ROLE=peer
INSTANCE_ID=local_dev_node
MESH_SECRET=eckwms_mesh_secret_2026_secure
BOOTSTRAP_NODES=https://pda.repair/E
BASE_URL=http://localhost:3210
# SYNC_NETWORK_KEY: 32 byte hex key for zero-knowledge sync encryption
SYNC_NETWORK_KEY=03ff60162c9bab589c248b2d0d97959e5978aca96d1fa565c5b394a3b5bb7a7a

# Public URL for QR Code Generation
GLOBAL_SERVER_URL=http://localhost:3210

# Language
DEFAULT_LANGUAGE=en

# Odoo ERP Configuration
ODOO_URL=http://localhost:8069
ODOO_DB=odooBase
ODOO_USER=odootest@example.com
ODOO_PASSWORD=passOdoo
ODOO_SYNC_INTERVAL=15

# Warehouse/Company Address (for delivery labels)
