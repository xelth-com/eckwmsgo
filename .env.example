# Node environment
NODE_ENV=development
PORT=3210

# Google OAuth 2.0 (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Encryption and security
ENC_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# PostgreSQL database configuration
# Zero-config: Leave PG_PASSWORD empty to use Embedded PostgreSQL (auto-downloaded)
# For external DB: Set PG_HOST, PG_USERNAME, PG_PASSWORD
PG_DATABASE=eckwmsgo_local
PG_USERNAME=postgres
PG_PASSWORD=
PG_HOST=localhost
PG_PORT=5432
DB_ALTER=true

# Frontend directory (optional - defaults to web/build)
# FRONTEND_DIR=web/build

# Language and translation configuration
DEFAULT_LANGUAGE=en
TRANSLATION_DOMAIN=for a warehouse management system
# OpenAI API key for translation
OPENAI_API_KEY=your_openai_api_key

# Server Ports
LOCAL_SERVER_PORT=3000
GLOBAL_SERVER_PORT=8080

# Public URL for QR Code Generation
GLOBAL_SERVER_URL=https://your-domain.com

# Internal URL for Global Server to connect to Local Server
LOCAL_SERVER_INTERNAL_URL=http://localhost:3000

# Global Server Sync Configuration
GLOBAL_SERVER_API_ENDPOINT=https://your-domain.com/ECK/api/internal/sync
GLOBAL_SERVER_API_KEY=your_internal_sync_api_key

# Server Asymmetric Keys (generate with 'node scripts/generate-keys.js')
SERVER_PUBLIC_KEY=your_ed25519_public_key_base64
SERVER_PRIVATE_KEY=your_ed25519_private_key_base64

# Unique Instance ID (generate with uuidgen or similar)
INSTANCE_ID=your_unique_instance_uuid

# Global Server Registration Endpoint
GLOBAL_SERVER_REGISTER_URL=https://your-domain.com/ECK/api/internal/register-instance
